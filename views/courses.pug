extends layout.pug

block content
    div.courseTable
        table#courseTable.display(style='width:100%')
            thead
                tr
                    th Id
                    th Holdnavn
                    th Niveau
                    th Antal pladser
                    th Tidspunkt
                    th Sted
            tbody
                if (courses.length >0)
                    each course in courses
                        tr
                            td #{course._id}
                            td #{course.courseName}
                            td #{course.level}
                            td #{course.seats}
                            td #{course.date}
                            td #{course.place}
            tfoot
                tr
                    th Id
                    th Holdnavn
                    th Niveau
                    th Antal pladser
                    th Tidspunkt
                    th Sted
    div
        button#goback Tilbage
    script(src='https://code.jquery.com/jquery-3.3.1.js', type ='text/javascript')
    script(src='https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js', type ='text/javascript')
    script(src='https://cdn.datatables.net/select/1.3.1/js/dataTables.select.min.js', type ='text/javascript')
    script(src='/js/course.js', type ='text/javascript')

