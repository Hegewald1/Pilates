extends layout.pug

block content
    div.usersOnTable
        label Deltagere på holdet
        table#usersOnTable.display(style='width:100%')
            thead
                tr
                    th Id
                    th Courseid
                    th Navn
                    th Niveau
            tbody
                each user in usersOnCourse
                    tr
                        td #{user._id}
                        td #{courseID}
                        td #{user.name}
                        td #{user.level}
            tfoot
                tr
                    th Id
                    th Courseid
                    th Navn
                    th Niveau
    div.usersNotOnTable
        label Deltagere ikke på holdet
        table#usersNotOnTable.display(style='width:100%')
            thead
                tr
                    th Id
                    th Courseid
                    th Navn
                    th Niveau
            tbody
                each user in usersNotOnCourse
                    tr
                        td #{user._id}
                        td #{courseID}
                        td #{user.name}
                        td #{user.level}
            tfoot
                tr
                    th Id
                    th Courseid
                    th Navn
                    th Niveau
    div
        button#goback Tilbage
    script(src='https://code.jquery.com/jquery-3.3.1.js', type ='text/javascript')
    script(src='https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js', type ='text/javascript')
    script(src='https://cdn.datatables.net/select/1.3.1/js/dataTables.select.min.js', type ='text/javascript')
    script(src="https://unpkg.com/axios/dist/axios.min.js" type ='text/javascript')
    script(src='/js/studentCourse.js', type ='text/javascript')